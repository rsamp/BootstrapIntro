<!DOCTYPE html>
<html>
<head>
  <title>BootstrapDemo</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="nav navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#collapse-menu"
              aria-expanded="false">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="collapse-menu">
      <ul class="nav navbar-nav">
        <li><%= link_to("Home", home_url) %></li>
        <li><%= link_to("Contact", contact_url) %></li>
        <li><%= link_to("About", about_url) %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <li><%= link_to("Sign In", new_session_url) unless current_user %></li>
        <% if current_user %>
        <div class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <%= current_user.username %>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><%= link_to("Profile", user_url) if current_user %></li>
            <li><%= link_to("Sign Out", session_url, method: :delete) if current_user %></li>
          </ul>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
